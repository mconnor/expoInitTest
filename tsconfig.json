{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "moduleResolution": "node",
        "noEmit": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "strict": false,
        "target": "es5",
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "esnext",
        "isolatedModules": true,
        "baseUrl": "./",
        "paths": {
            "@eva-design/*": [
                "./packages/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "packages/**/*.ts",
        "packages/**/*.json"
    ],
    "exclude": [
        "node_modules"
    ]
}